<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="40dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ProgressBar
        android:id="@+id/progress_circular_load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:indeterminate="true"
        app:layout_constraintEnd_toEndOf="parent"
        android:indeterminateTint="@color/black" />

    <TextView
        android:id="@+id/text_aguarde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aguarde..."
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/progress_circular_load"
        app:layout_constraintEnd_toEndOf="@id/progress_circular_load"
        app:layout_constraintTop_toBottomOf="@id/progress_circular_load"
        android:layout_marginTop="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>